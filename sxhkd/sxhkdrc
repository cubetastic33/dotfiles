#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# program launcher
super + @space
	rofi -show drun -show-icons

# window switcher
super + a
	rofi -show window -show-icons

# vifm
super + v
	alacritty -e ~/.config/sxhkd/file_manager.sh

# lock screen
super + control + l
	xset s activate

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# Volume controls
#

# Increase the volume
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +2% && /home/aravk/.config/sxhkd/notify_volume.sh

# Decrease the volume
XF86AudioLowerVolume
	pactl set-sink-volume 0 -2% && /home/aravk/.config/sxhkd/notify_volume.sh

# Toggle mute
XF86AudioMute
	pactl set-sink-mute 0 toggle && /home/aravk/.config/sxhkd/notify_volume.sh

#
# Screen brightness controls
#

# Increase the brightness
XF86MonBrightnessUp
	light -A 1 && echo $(light -G) > xobbklpipe

# Decrease the brightness
XF86MonBrightnessDown
	light -U 1 && echo $(light -G) > xobbklpipe

# Set the brightness to 0
super + control + x
	light -S 0

# Set the brightness to 30%
super + control + shift + x
	light -S 30

#
# Media player controls
#

# Play / Pause
XF86AudioPlay
	playerctl play-pause --player=spotify

# Next
XF86AudioNext
	playerctl next --player=spotify

# Previous
XF86AudioPrev
	playerctl previous --player=spotify

#
# Screenshot controls
#

# Take a full-screen screenshot and save it
Print
	maim ~/Pictures/screenshots/screenshot-$(date +%s).png

# Take a full-screen screenshot and copy it to the clipboard
control + Print
	maim | xclip -selection clipboard -t image/png

# Take a screenshot of a region of the screen and save it
shift + Print
	maim -u -s ~/Pictures/screenshots/screenshot-$(date +%s).png

# Take a screenshot of a region and copy it to the clipboard
control + shift + Print
	maim -u -s | xclip -selection clipboard -t image/png

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + grave
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
